{% extends "base.html.twig" %}
{% block title %}Inscription
{% endblock %}

{% block body %}
	<main>
		<div class="slider-area2">
			<div class="slider-height2 d-flex align-items-center">
				<div class="container">
					<div class="row">
						<div class="col-xl-12">
							<div class="hero-cap hero-cap2 pt-70">
								<h2>Inscription</h2>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

<section class="section-padding" style="background-color: #eee;">
			<div class="container h-100">
				<div class="row d-flex justify-content-center align-items-center h-100">
					<div class="col-lg-12 col-xl-11">
						<div class="card text-black" style="border-radius: 25px;">
							<div class="card-body p-md-5">
								<div class="row justify-content-center">
									<div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

										<p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

 <form method="post">

      <h2 class="pb-30">Connexion</h2>
      <div class="form-row">
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" required autofocus>
      </div>
      <div class="form-row">
        <label for="inputPassword">Mot de passe</label>
        <input type="password" name="_password" id="password" required>
      </div>
      <div class="form-row">
        <label>
          <input type="checkbox" name="_remember_me"> Se souvenir de moi
        </label>
      </div>
      {% if error %}
      <ul class="form-errors mb-20">
        <li>{{ error.messageKey|trans(error.messageData, 'security') }}</li>
      </ul>
      {% endif %}

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

      <button class="btn btn-primary mr-10" type="submit">
        Connexion
      </button>
      <small>
        <a href="{{ path('signup') }}">Vous n'avez pas encore de compte?</a>
      </small>
  </form>
										
									</div>
									<div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

										<img src="{{asset ('img/hero/h1_hero.png')}}" class="img-fluid" alt="Sample image">

									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

 

	</main>
{% endblock %}
